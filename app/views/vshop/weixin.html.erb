<div class=" wrp">

  <!--<div class="page_nav"> 管理中心</div>-->
  <div class="tool_area" style="display:none;">
    <span class="frm_input_box search prepend">
        <a id="msgSearchBtn" href="javascript:void(0);" class="icon16_common search_gray frm_input_append">搜索</a>
        <input id="msgSearchInput" type="text" placeholder="输入名称或编号查找" value="" class="frm_input" />
    </span>
  </div>

  <div class="container_box cell_layout">
    <div id="data_box" class="data_box">
      <div class="tab">
        <ul id="appTabUl" class="tab_navs">
          <li apptype="biz" class="tab_nav"><a href="/vshop/weixin">基本信息</a></li>
          <li apptype="mobile" class="tab_nav first"><a href="/admin/wechat/followers?platform=vshop">佣金管理</a></li>
          <li apptype="web" class="tab_nav"><a href="/admin/static_pages">内容管理</a></li>

        </ul>
      </div>


<DIV class="container_box cell_layouts" >
    <DIV class="step_panel">
      <DIV class="app_create_box app">
        <%=form_for :supplier,:url=>@action,:method=>'put', :remote=>true do |f|%>
            <DIV class="frm_control_group">
              <%= f.label :tel, '公司电话', :class => "frm_label" %>
              <DIV class="frm_controls">
              <SPAN class="frm_input_box">
              <%= f.text_field :tel ,:class=>'frm_input',:maxlenth=>'40'%>
              </SPAN>
              </DIV>
            </DIV>
            <DIV class="frm_control_group textarea">
              <%= f.label :desc, '微店简介', :class => "frm_label" %>
              <DIV class="frm_controls">
              <SPAN class="frm_textarea_box">
               <%= f.text_field :desc ,:class=>'frm_input',:maxlenth=>'80'%>
              </SPAN>
                <P class="frm_tips">最多80字</P></DIV>
            </DIV>
            <DIV class="frm_control_group" style="height:210px">
              <%= f.label :qrcode, '微信二维码', :class => "frm_label" %>
              <DIV class="frm_controls">
              <img  src="/images/a0<%=@supplier.id%>/homepage/getqrcode.jpg" style="height:200px;">
              </DIV>
            </DIV>
            <DIV class="frm_control_group" style="height:210px" >
              <%= f.label :logo, 'logo', :class => "frm_label" %>
              <DIV class="frm_controls">
              <img  src="/images/a0<%=@supplier.id%>/homepage/logo.jpg" style="height:200px;">
              </DIV>
            </DIV>
            <DIV class="frm_control_group" style="height:210px">
              <%= f.label :post, '店招', :class => "frm_label" %>
              <DIV class="frm_controls">
              <img  src="/images/a0<%=@supplier.id%>/homepage/post.jpg" style="height:200px;">
              </DIV>
            </DIV>
            <DIV class="tool_bar border with_form">
              <%=f.submit '确定', :class=>"btn btn_primary",:id=>"nextBt" %>
            </DIV>
        <%end%>
      </DIV>
    </DIV>
  </div>
    </div>
  </div>

</div>

</div>