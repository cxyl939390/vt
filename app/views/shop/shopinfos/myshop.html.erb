<div id="amz-home">
  <section id="amz-hero" style="text-align: center">
    <div class="amz-container am-cf">
      <div class="amz-mascot am-scrollspy-init am-scrollspy-inview am-animation-slide-left" data-am-scrollspy="{animation: 'slide-left', delay: 100}">
        <%=image_tag @shop.shop_logo,:id=>"weixin",:style => "width:40%"  %>
      </div>

      <div class="amz-hero-intro">
        <div class="amz-hero-headings">
          <h1 class="clearstyle " data-am-scrollspy="{animation:'slide-left'}" class="am-scrollspy-init am-scrollspy-inview am-animation-slide-left">欢迎来到<%=@shop.shop_name%>的小店</h1>
          <h2 class="clearstyle " style="color: #1f6377" data-am-scrollspy="{animation:'slide-right', delay: 500}" class="am-scrollspy-init am-scrollspy-inview am-animation-slide-right"><%=@shop.shop_intro%></h2>
        </div>
      </div>
    </div>
  </section>
</div>









<div class="main">
  <%if @shop_goods.size>0%>
      <div class="am-panel-bd">
        <ul class="am-list">
          <%@shop_goods.each do |shopgoods|%>

              <li class="am-g am-list-item-desced am-list-item-thumbed am-list-item-thumb-left" style="cursor: pointer">

                <a href="/shop/shopinfos/goods_details?id=<%=shopgoods.good.bn%>&shop_id=<%=@shop.shop_id%>">
                <div class="am-col col-sm-4 am-list-thumb">
                  <img src="<%=shopgoods.good.list_default_pic%>" class="j_item_image pg1" data-original1="<%=shopgoods.good.list_default_pic%>" data-brandid="<%=shopgoods.good.brand_id%>" data-productid="<%=shopgoods.good.bn%>" data-onerror="<%=shopgoods.good.list_default_pic%>" data-brandlazy="false" style="display: block;">
                </div>
                <div class="am-col col-sm-8 am-list-main">
                <span class="am-list-item-hd ">
                  <%=shopgoods.good.name%>
                </span>
                  <div class="am-list-item-text" style="width: 100%;" >

                    <span class="right">商品价:<strong class="price" >¥<%=shopgoods.good.price%></strong> </span>  </div>
                </div>

                </a>
              </li>
          <%end%>

        </ul>
      </div>
  <%else%>
      <%=if @user.member_id==@shop.member_id%>

      <a href="/shop/shopinfos/show_goods?shop_id=<%=@shop.shop_id%>" >
        <div class="am-panel am-panel-primary " style="margin-top: 100px">
          <div class="am-panel-hd" style="padding: 24px"><i  class="am-icon-shopping-cart "></i>
            <span style="margin-left: 10px">您的店铺空空的!您可以去贸威里面挑选喜欢的商品</span> </div>
        </div>
      </a>
       <%else%>
          <div class="am-panel am-panel-primary " style="margin-top: 100px">
            <div class="am-panel-hd"><i  class="am-icon-shopping-cart "></i>
              <span style="margin-left: 10px">对方店铺目前没有商品 您可以选择<a href="/shop/shopinfos/new?parent_id=<%=@shop.shop_id%>">我也要开店</a>来经营自己的小店</span> </div></div>
      <%end%>
  <%end%>
</div>
