<script>
    var supplier_id=$("#supplier_id").val();
    var shop_id=$("#shop_id").val();
    $(".am-list-item-thumb-left").each(function(){

         $(this).bind("click",function() {

          var cheched=    $(this).children().children();
            var good_id=cheched.val();

             if (cheched.attr("checked") == false) {
                 cheched.attr("checked", 'true');
                 $.ajax({
                           type:'post',
                            url:"/shop/shopinfos/add_goods",
                            data: { goods_id: good_id ,supplier_id:supplier_id,shop_id:shop_id},
                           success:function(data){
                                alert("添加成功!!")
                          }

                 } )
             }
             else {
                 cheched.removeAttr("checked");
                 $.ajax({
                     type:'post',
                     url:"/shop/shopinfos/goods_destroy",
                     data: { goods_id: good_id ,supplier_id:supplier_id,shop_id:shop_id,platform:"mygood"},
                     success:function(data){
                         alert("删除成功")
                     }

                 } )
             }
         });
    });



