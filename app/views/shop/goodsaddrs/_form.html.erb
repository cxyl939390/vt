</style>
<div class="am-input-group">
  <span class="importstart">* </span>
  <span > <%=I18n.t "importstart"%></span>
</div>

<%#=javascript_include_tag "patch/member_addrs"%>

<div class="member_addrs">
  <%=form_for :visitor, :url=>@method == :put ? @action_url :"" , :method=>@method||:post,:html=>{ :class=> " form-horizontal" } do |f|%>
      <% if params[:return_url]%>
          <input type="hidden" name="return_url" value="<%=@return_url%>">
      <%else%>

          <input type="hidden" name="return_url" value="">
      <%end%>
      <br/>
      <input type="hidden" name="platform" value="shop">
      <div class="am-input-group">
        <span class="am-input-group-label"><%=I18n.t "name"%><span class="importstart">*</span></span>
        <input class="am-form-field" id="visitor_visitor_name" name="visitor[visitor_name]" placeholder="<%=I18n.t "name"%>"value="<%=@visitors.name%>">


      </div>
      <br/>
      <div class="am-input-group">
        <span class="am-input-group-label"><%=I18n.t "m_phone"%><span class="importstart">*</span></span>
        <input class="am-form-field" id="visitor_phone" name="visitor[phone]" placeholder="<%=I18n.t "m_phone"%>" value="<%=@visitors.mobile%>">


      </div>
      <br/>
      <div class="am-input-group">
        <span class="am-input-group-label"><%=I18n.t "tel"%></span>
        <input class="am-form-field" id="visitor_tel" name="visitor[tel]" placeholder="<%=I18n.t "tel"%>" value="<%=@visitors.tel%>">


      </div>


      <br/>
      <div class="am-input-group">
        <span class="am-input-group-label"><%= I18n.t "express_code"%></span>
        <input class="am-form-field" id="visitor_postal" name="visitor[postal]" placeholder="<%=I18n.t "express_code"%>" size="30" type="text">

      </div>
      <br/>
      <div class="am-input-group">
        <span class="am-input-group-label"><%= I18n.t "address_detail"%><span class="importstart">*</span></span>

        <%=f.text_field :address, :id=>"addr", :cols=>"0",:rows=>"0",:class=>"am-form-field"%>
        <span class="help-inline error"></span>
      </div>

      <dl class="connerbox" style="display:none"><dd><span> <%=f.label :def_addr, "设置为默认地址：",:class=>"text_input"%></span>
        <span class="form_td"><input name="visitor[def_addr]" type="hidden" value="1" checked="true" /></span>
      </dd></dl>
      <br/>
      <div class="ui-btn-area">
        <%if @method == :put%>
            <input type="button" class="am-btn am-btn-warning am-btn-block "  value="<%=I18n.t "confirm"%>">

        <%else%>
            <input type="button" class="am-btn  am-btn-warning am-btn-block  "   value="<%=I18n.t "confirm"%>">

        <%end%>
      </div>

  <%end%>
</div>

