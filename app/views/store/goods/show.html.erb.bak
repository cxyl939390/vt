<%=form_for :product,:url=>store_add_to_cart_path do |f|%>
	<%=f.hidden_field :goods_id,:value=>@good.goods_id%>
	<%=f.hidden_field :type_id,:value=>@good.type_id%>
	brand : <%=@good.brand.brand_name%> <br />
	bn : <%=@good.bn%> <br />
	name : <%=@good.name%><br />
	price : <%=@good.price%><br />

	<%@good.specs.each do |spec|%>
		<%=spec.spec_name%>:
		<%=hidden_field_tag "product[specs][][spec_id]",spec.spec_id%>
		<%@good.spec_values.where(:spec_id=>spec.spec_id).uniq.each do |sv|%>
			<%if spec.spec_type == 'text'%>
			<%=radio_button_tag "product[specs][][spec_value_id]", sv.spec_value_id %> 
			<label><%=sv.spec_value%></label>
			<%end%>
			<%if spec.spec_type == 'image'%>
			<%=hidden_field_tag "product[specs][][spec_value_id]", sv.spec_value_id%>
			<%=image_tag "http://test2.i-modec.com/#{sv.image.url}",:alt=>sv.spec_value,:title=>sv.spec_value,:size=>"20x20" if spec.spec_type == 'image'%> 
			<%end%>
		<%end%>
		<br />
	<%end%>

	default image :
	<%=image_tag "http://test2.i-modec.com/#{@good.default_image.url}"%>
	<%=f.submit "加入购物车"%>
<%end%>
