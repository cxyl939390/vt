<header id="header" class="header clearfix">

  <div class="head_left fl"><a href="http://m.vip.com/cart.html?rbc=service"><span class="h_back"></span></a></div>
  <span class="headtit">结算</span>
  <div class="head_right fr"><a href="http://m.vip.com/index.html" mars_sead="nav_home_btn"><span class="h_home"></span></a></div>
</header>
<%if @line_items.size > 0%>
<div class="space10"></div>
<div data-formorder="checkoutForm">
  <div class="userdiv">

        <%=form_for :order,:url=>"#{orders_path}?platform=mobile",:html=>{ :class=>"form-horizontal",:id=>"order_form" } do |f|%>
            <%=hidden_field_tag "member_addr",@def_addr&&@def_addr.addr_id%>
    <div class="checktit font14"><span class="receive_info"></span>收货信息</div>
    <div class="checkcon clearfix">
              <%if @addrs.size>0%>
                  <%@addrs.each_with_index do |addr,index|%>
                      <%if @def_addr == addr%>
                          <p class="check_addr">
                            <%=radio_button_tag "member_addr", addr.addr_id,:checked=>true%>
                            <span class="addr-line"><%=addr.addr_line%></span>
                            <%=link_to "修改",edit_member_addr_path(addr),:remote=>true,:class=>"update-link"%>
                          </p>
                      <%else%>
                          <p class="check_addr">
                            <%=radio_button_tag "member_addr", addr.addr_id%>
                            <span class="addr-line"><%=addr.addr_line%></span>
                            <%=link_to "修改",edit_member_addr_path(addr), :remote=>true, :class=>"update-link"%>
                          </p>
                      <%end%>
                  <%end%>
                  <p class="check_addr">
                    <%=radio_button_tag "member_addr", "new"%>
                    <span>使用新地址+</span>
                  </p>
              <%end%>
    </div>
    <div data-cartforms="time" data-collapse="true" data-style="arrow">
      <p class="timetit">
        <span class="text">送货时间不限</span>
        <span class="down_arrow"></span>
      </p>
      <div class="in_pay clearfix hide">
        <ul>
          <li mars_sead="checkout_receive_anytime_btn"><span class="radio-box radio-selted"></span><input name="transport_day" value="1" type="radio" class="hide" checked="checked"><p>送货时间不限</p></li>
          <li mars_sead="checkout_receive_weekend_btn"><span class="radio-box "></span><input name="transport_day" value="2" type="radio" class="hide"><p>只双休日/节假日送货(工作日不用送)</p></li>
          <li mars_sead="checkout_receive_workday_btn"><span class="radio-box "></span><input name="transport_day" value="3" type="radio" class="hide"><p>只工作日(双休日/节假日不用送)</p></li>
        </ul>
      </div>
      <label class="radio active">
        <%=f.radio_button :shipping_id, 0%><span class="addr-line">自提</span>
      </label>
      <label class="radio">
        <%=f.radio_button :shipping_id, 1, :checked=>true%> 快递
        <span class="extra-info">+ ￥10</span>
      </label>
      <div class="control-group">
        <%=f.label :ship_time, "收货时间：",:class=>"control-label"%>
        <div class="controls">
          <%=f.select :ship_day,ship_day_options%>
          <%=f.text_field :ship_special,:class=>"input-small hide datetime"%>
          <%=f.select :ship_time2,ship_time_options%>
        </div>
      </div>
    </div>
  </div>
  <div class="userdiv" id="order_payway" data-cartforms="payway">
    <div class="checktit clearfix"><span class="pay_way"></span>支付方式</div>
    <div class="in_pay">
      <ul>
        <%if @user.advance>0 && @user.advance < @cart_total%>
        <li class="otherpay" mars_sead="checkout_payment_paypal_radio">
          <span class="radio-box"></span>
          <%=f.check_box :part_pay, { :checked=>true, :'data-amount'=>@user.advance, :id=>"advance" }, @user.advance, 0%>
          <span class="payicon zfbapp"></span><p>预存款先支付</p>
        </li>
        <%end%>
        <li class="otherpay" mars_sead="checkout_payment_paypal_radio">
          <span class="radio-box"></span>
          <%=f.radio_button :payment, "ips", :class=>"hide",  :checked=>true%>
          <span class="payicon zfbapp"></span><p>环迅人民币支付</p>
        </li>
        <li class="otherpay" mars_sead="checkout_payment_paypal_radio">
          <span class="radio-box"></span>
          <%=f.radio_button :payment, "alipay", :class=>"hide"%>
          <span class="payicon zfbapp"></span><p>支付宝</p>
        </li>

        <li class="bankpay" mars_sead="checkout_payment_card_radio" style="display:none"><span class="radio-box"></span><input name="pay_type" value="-2" data-bankid="" data-type="" data-cashier="1" type="radio" class="hide"><span class="payicon bankcard"></span><p>银行卡(<em>请选择支付卡种</em>)</p><span class="down_arrow"></span>
          <div class="dropdiv hide">
            <ul class="title clearfix" data-catetype="cart">
              <li><span class="cur bor">信用卡</span></li>
              <li><span>储蓄卡</span></li>
            </ul>
            <div class="dropBank" data-carttype="bank" data-twipay="false">
              <ul>
                <li>招商银行信用卡<span data-bankid="CREDITCARD_CMB" data-type="87"></span></li>
                <li>中国建设银行信用卡<span data-bankid="CREDITCARD_CCB" data-type="86"></span></li>
                <li>中国工商银行信用卡<span data-bankid="CREDITCARD_ICBC" data-type="89"></span></li>
                <li>广发银行信用卡<span data-bankid="CREDITCARD_GDB" data-type="89"></span></li>
                <li>中国银行信用卡<span data-bankid="CREDITCARD_BOC" data-type="89"></span></li>
                <li>兴业银行信用卡<span data-bankid="CREDITCARD_CIB" data-type="89"></span></li>
                <li>中国民生银行信用卡<span data-bankid="CREDITCARD_CMBC" data-type="89"></span></li>
                <li>中国农业银行信用卡<span data-bankid="CREDITCARD_ABC" data-type="89"></span></li>
                <li>中信银行信用卡<span data-bankid="CREDITCARD_CITIC" data-type="89"></span></li>
                <li>华夏银行信用卡<span data-bankid="CREDITCARD_HXBANK" data-type="89"></span></li>
                <li>中国光大银行信用卡<span data-bankid="3108" data-type="92"></span></li>
              </ul>

              <ul class="hide">
                <li>中国工商银行储蓄卡<span data-bankid="DEBITCARD_ICBC" data-type="89"></span></li>
                <li>中国建设银行储蓄卡<span data-bankid="DEBITCARD_CCB" data-type="86"></span></li>
                <li>招商银行储蓄卡<span data-bankid="DEBITCARD_CMB" data-type="87"></span></li>
                <li>中国银行储蓄卡<span data-bankid="DEBITCARD_BOC" data-type="89"></span></li>
                <li>中信银行储蓄卡<span data-bankid="DEBITCARD_CITIC" data-type="89"></span></li>
                <li>中国民生银行储蓄卡<span data-bankid="DEBITCARD_CMBC" data-type="89"></span></li>
                <li>深圳平安银行<span data-bankid="DEBITCARD_SPABANK" data-type="89"></span></li>
                <li>广发银行<span data-bankid="DEBITCARD_GDB" data-type="89"></span></li>
                <li>兴业银行<span data-bankid="DEBITCARD_CIB" data-type="89"></span></li>
              </ul>
            </div>
          </div>
        </li>

      </ul>
    </div>
  </div>

  <div class="userdiv">
    <div class="checktit clearfix"><span class="pay_sum"></span>订单金额</div>
    <div class="checkcon clearfix" id="order-m-list">

      <div class="sumtotal clearfix">
        <p>商品金额：<span class="fr money sum" id="order_amount" data-amount = "<%=@cart_total%>">¥<%=@cart_total%></span></p>
        <p style="display:none">发货运费：<span class="fr">¥0</span></p>
        <p>待支付总额：<span class="fr">¥<%=@cart_total%></span></p>
      </div>
      <input type="hidden" name="payable" value="">
    </div>
  </div>
  <input type="hidden" name="favourable_id" value="">

  <div class="userdiv" data-cartforms="invoice">
    <div class="invoice clearfix">
      <h3>发票抬头:
        <span class="companyname">点击填写发票</span><span class="down_arrow"></span>
      </h3>
    </div>
    <div class="invoice clearfix hide">
      <h3>发票抬头:</h3>
      <div class="dashline2"></div>
      <input name="invoice" type="text" placeholder="请输入发票抬头" value="" class="text_input w100">
    </div>
  </div>


  <div class="bottomdiv clearfix">
    <div class="cover_load_img w38" id="CoverloadImg"></div>
    <div class="inner clearfix">
      <div class="fl">
        <p class="cart_total">总金额：<span class="c_t_price">¥<%=@cart_total%></span></p>
        <span style="display:none">为您节省：¥390</span>
      </div>
      <%=f.submit "安 全 结 算",:class=>"fr btn_sure"%>
      <div mars_sead="checkout_submit_btn" class="fr btn_sure" data-orderfrom="true" data-countorder="true" data-ordertime="988" style="display:none">
        提交
        <div class="fr cart_time_smb">
          <span class="clockicon fl"></span>
          <span class="num_cunt"><span class=":">14</span><span>:</span><span>53</span><span></span></span>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="space10"></div>
<script type="text/javascript">
    $(function() {
        $("#reddot").on("click", function() {
            Cookie.Set("WAP[redDot]", 'fd73928d4dea11aa0cbba3c2cb6b9afe', 7, "trade-v.com", "/")
        });
    });
</script>
<div class="space30"></div><div class="space30"></div>
<style type="text/css">
    .footer{
        display:none;
    }
</style>
    <%#=javascript_include_tag "store/orders"%>
<div style="display:none">
	<%if @pmtable%>
	<div class="section promotions">
		<h5>优惠: </h5>
		<%=render "promotions"%>
		<%=render "coupons"%>
	</div>
	<%end%>

	<div class="section checkout clearfix">
		<h5>结算信息</h5>
		<div class="left">
			<div class="memo">
				<div class="control-group">
				    <%=f.label :memo, "订单备注：",:class=>"control-label"%>
				    <div class="controls">
				      <%=f.text_area :memo,:rows=>4%>
				    </div>
				</div>
			</div>
		</div>
		<div class="right">
			<div class="tax" id="order_tax">
				<div class="item">
					<span class="text">需要发票：</span>
					<span class="money">(税金:0%)<%=f.check_box :is_tax, {}, 'true','false'%></span>
				</div>

				<div class="item hide tax-input">
					<span class="text">发票抬头：</span>
					<span class="money"><%=f.text_field :tax_company,:class=>"tax-owner"%></span>
				</div>
			</div>
			<div class="cost" id="order_cost">
				<div class="item">
					<span class="text">商品总额：</span>
					<span class="rmb-symbol">￥</span>

				</div>

				<%if @order_promotions.present? || @goods_promotions.present? %>
				<div class="item">
					<span class="text">优惠：</span>
					<span class="rmb-symbol">￥</span>
					<span class="money" data-amount="0" id="pmt_amount"></span>
				</div>
				<%end%>


				<div class="item hide">
					<span class="text">优惠券：</span>
					<span class="rmb-symbol">￥</span>
					<span class="money" data-amount="0" id="coupon_amount">
						 -0
					</span>
				</div>
				
				<div class="item">
					<span class="text">订单总金额：</span>
					<span class="rmb-symbol">￥</span>
					<span class="money" id="final_amount"></span>
				</div>

			</div>
			<div class="total" id="order_bill">
				<div class="item">
					<span class="text">支付金额：</span>
					<span class="rmb-symbol">￥</span>
					<span class="money final" id="pay_amount"></span>
				</div>

			</div>

		</div>
	</div>
 </div>
	<%end%>
<%else%>
	<p>您还没有选择商品。</p>
<%end%>