<header id="header" class="header clearfix">

  <div class="head_left fl"><a href="/cart/mobile"><span class="h_back"></span></a></div>
  <span class="headtit">信息</span>
  <div class="head_right fr"><a href="/m" mars_sead="nav_home_btn"><span class="h_home"></span></a></div>
</header>
<%if @line_items.size > 0%>
    <div class="space10"></div>
    <div data-formorder="checkoutForm">
      <div class="userdiv">
        <div class="checktit font14"><span class="receive_info"></span>收货信息</div>
        <div class="checkcon clearfix">
          <a href="/orders/new_manco_addr" title="新增地址">

          </a>

            </div>
        <div class="checktit font14">
        <span class="receive_info"></span>货信息</div>
      <div class="checkcon clearfix">
        <a href="/orders/new_mobile_addr" title="新增地址">
          <%@def_addrs.each do |def_addr|%>
              <p><%=def_addr.name%>:<%=def_addr.mobile%></p>
