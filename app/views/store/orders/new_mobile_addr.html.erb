<div class="am-panel am-panel-warning" style="text-align: center">
  <div class="am-panel-hd"><%= I18n.t "address"%></div>
</div>
<div class="am-panel am-panel-default addr">
  <%if @addrs && @addrs.size > 0%>
      <%@addrs.each  do |addr|%>
          <a id="addressLink" href="addr_detail?platform=mobile&supplier_id=<%=@supplier.id%>&id=<%=addr.id%>">
            <div class="am-panel-bd">
              <span class="text" style="font-size: 20px"><%=addr.name%>  </span>
              <br/>
              <span class="text2"><%=addr.display_area%></span>
              <span class="icon-arr"></span>
            </div>  </a>
      <%end%>

      <input id ="newaddr" class="am-btn am-btn-warning am-btn-block" value="<%= I18n.t "use_new_addr"%>"/>



      </div>
  <%else%>
      <div class="am-panel-bd">
        <span >您还没有收货地址</span>
      </div>
  <%end%>

  </div>







<%=render :partial=>"patch/member_addrs/form_mobile",:locals=>{ :display=>( @addrs.size == 0 ), :@addr=>Ecstore::MemberAddr.new }%>

