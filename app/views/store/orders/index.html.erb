  <style type="text/css">
    table{
        width: 100%;
        border: 4px,solid #000000;;



    }
    table th{

        background-color: #ffffff;
         color: #000000;

    }
    table td{
       text-align: center;
        color: #dd514c;
        background-color: rgba(221, 81, 76, 0.15);
        border-color: #f5cecd;

    }


  </style>


<table class="table table-striped" id="order_list">
	<tr>
		<!--<th>订单号</th>-->
		<th>商品</th>

		<th>金额</th>
		<!--<th style="display:none">订单状态</th>-->
		<th>详细</th>


	</tr>

	<%@orders.each  do |order|%>
	<tr>
		<!--<td><#%=link_to order.order_id, order_path(order)%></td>-->
		<td>
			<%order.order_items.each_with_index do |order_item,index|%>
				<%
					link_title = order_item.name
					link_title = "赠品:#{link_title}" if order_item.item_type == 'gift'
				%>
              <%=link_to "/orders/norsh_show_order?id=#{order.order_id}",:target=>"_blank"%>
					<%=image_tag order_item.good.medium_pic,:class=>"thumb" if order_item.item_type == 'product'%>
					<%=image_tag order_item.product.gift_image_url,:class=>"thumb" if order_item.item_type == 'gift'%>


			<%end%>
		</td>

		<!--<td><%#=order.created_at%></td>-->
		<td>￥<%=order.final_amount%></td>
		<!--<td style="display:none"><%=order.status_text%></td>-->
		<td>



              <%=link_to "查看详细","/orders/norsh_show_order?id=#{order.order_id}",:target=>"_blank"%></td>
			<!--<td><#%=link_to "去付款",order_path(order),:target=>"_blank" if order.status == 'active' && order.pay_status=='0'%></td>-->


	</tr>
	<%end%>

</table>

