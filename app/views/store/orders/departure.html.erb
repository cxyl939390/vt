<header id="am-topbar am-topbar-inverse">

  <div class="am-panel am-panel-primary">
    <div class="am-panel-hd">寄货人地址</div>

  </div>

</header>

      <a href="/orders/new_manco_addr" title="">新增寄货人地址 </a>





       <form action="arrival" class="am-form" method="post">
       <table class="am-table am-table-striped am-table-hover">
         <tr>
           <td>&nbsp;</td>
            <td >姓名</td>
           <td >手机</td>
           <td >联系电话</td>
         </tr>

           <%if @addrs.size>0%>
               <%@def_addrs.each do |def_addr|%>
                 <tr>
                   <td><%=radio_button_tag "member_departure_id",def_addr.addr_id%></td>
                   <td ><%=def_addr.name%></td>
                   <td ><%=def_addr.mobile%></td>
                   <td ><%=def_addr.addr%></td>
                   </tr>

         <% end %>
               <%end%>


       </table>
       <input type="submit" class="am-btn am-btn-primary form-sure" value="确认选择" >
   </form>
