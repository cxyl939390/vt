<style>

    input.textcenter {
        text-align: center;
        position: relative;
        margin: 0 auto;
        width: 40px;
        border: solid 1px #ccc;
    }
</style>
<div class="space10"></div>

<h2 class="order_sendby clearfix">
  <span style="display:none">	供应商发货,</span>
</h2>
<%@line_items.select{ |x| x.good.present? && x.product.present? }.each do |line_item|%>
    <div class="cartdiv" id="line_<%=line_item.obj_ident%>">
      <div class="cartlist clearfix">

        <div class="space10"></div>
        <div class="cartlistinner clearfix">

          <div class="cart_orderlist_info"> <a href="\mancoproducts?id=<%=line_item.good.bn%>">
            <p class="cart_g_name">物流信息：<%=line_item.product.name%></p>
            <br/>
           <p class="fontgrey"> 还剩：<%=line_item.good.store%>顿</p>
            <br/>
            <p class="fontgrey"><%=line_item.good.spec_info%></p>

            <p class="space5"></p>
          </a>



            <div class="space5"></div>

          </div>
          <a class="cart_orderlist_p" href="\mancoproducts?id=<%=line_item.good.bn%>" target="_blank"  style="display:block">
            <span class="c_price">¥<%= format('%.2f',line_item.good.price)%></span>
            <span class="fontstyle">¥<%= format('%.2f',line_item.good.mktprice)%></span>
          </a>
		<span class="delete">

           <a href="<%="#{cart_path(line_item.obj_ident)}?platform=manco"%>" class="delete" data-method="delete" data-remote="true" rel="nofollow"  mars_sead="cart_delect_btn">
             <img src="/assets/mobile/scan_layer-33.png" width="22" height="22">
           </a>
		</span>
        </div>
      </div>
      <div class="orderaction clearfix">

        <div class="fl"></div>



        <div class="clear"></div>

      </div>
    </div>
<%end%>
<div class="bottomdiv clearfix">
  <div class="inner clearfix">
    <div class="fl">
      <p class="cart_total">总金额：<span class="c_t_price">¥<%= format('%.2f',@cart_total)%> </span></p>
    </div>
    <a href="/orders/new_manco" data-islogin="true" class="fr btn_sure" data-shopcarthide="true" data-counttime="true" data-carttime="1196">
      结算
      <span class="fr cart_time_smb"><span class="clockicon fl"></span>
        <span class="num_cunt"><span class=":">19</span><span>:</span><span>42</span><span></span></span></span>
    </a>
  </div>
</div>
