
<link rel="stylesheet" href="http://cdn.amazeui.org/amazeui/1.0.0-beta1/css/amui.all.min.css"/>
<style>
     body{
         background-color: #fcfffa;
     }
     .out{
         float: right;
     }
    .head-info {
        margin: 1rem auto;
        width: 300px;
        text-align: center;
      }
    .header h1 {
        font-size: 200%;
        color: #333;
        margin-top: 30px;
    }
    .header p {
        font-size: 14px;
    }
    .am-fl{
        margin-left: 30%;
        width: 30%;
    }
    .form_hide, #mancoweight,.button-hide,.kgi{
        display: none;
       }
     .button-am{
         font-size: 20px    ;
     }
    .am-form-group{
        text-align: center;
    }
    .form_show{
        display: block;
    }
 .am-form input[type="text"]{
   margin-bottom: 20px;
     width: 80%;
     margin-left: 45px;
     border: #15afef solid 1px;

 }
     .kginput #mancoweight,.kginput .kgi{
         float: left;
     }
</style>


<header id="am-topbar am-topbar-inverse">

  <div class="am-panel am-panel-primary">
    <div class="am-panel-hd">万家物流</div>

  </div>

</header>
<div class="head-info" >
  <img src="/assets/manco/logo.jpg" alt="..." class="am-img-circle">
  <p>400-821-6789</p>
</div>

    <form method="post" id="form_first" class="am-form am-form-group ">
      <span class="am-badge am-badge-primary" >请输入准确的信息:</span>
      <input type="text" name="departure" class="am-form-field" placeholder="请输入始发地:" id="departure" value="">
    <input type="text" name="arrival"placeholder="请输入终点站" class="am-form-field" id="arrival" value="">
     <div class="am-cf">
        <input type="button" id="serach" data-url="/manco/find_manco_good_first" name="" value="下一步" class="am-btn am-btn-primary am-btn-sm am-fl">

      </div>

    </form>

<%=form_for :product,:url=>"/cart/mancoexpress_add",:method=>"post",:html=>{:class=>"am-form am-form-group form_hide",:id=>"form_second",} do |f|%>
    <%=hidden_field_tag :goods_id, :id=>"goods_id"%>
    <%=f.hidden_field :type_id,:id=>"type_id"%>
    <%=hidden_field_tag :platform,'mancoexpress'%>
    <%=hidden_field_tag :manco_unit_price, :id=>"manco_unit_price"%>
    <%=f.hidden_field :manco_name_two, :id=>"manco_name_two"%>
    <a href="#" class="am-badge am-badge-primary button-am" >友情提示:如果需要送货请点击并填写重量 </a>   <br/>  <br/><br/>
    <label for="text">物流行程:</label>
   <span style="text-align: center ;color: red" id="manco_name_show"></span> <br/> <br/>
    <label for="text">1kg运费价钱为:</label>
    <span style="text-align: center;color: red" id="manco_price_show">元</span>


    <div class="kginput">
    <%=text_field_tag :mancoweight  %>    <p class="kgi">kg</p>
    <%= f.submit :class=>"am-btn am-btn-primary am-btn-sm am-fl button-hide" ,:value=>"送货"%>
        </div>

    <%end%>


</div>

<a class="out" href="/manco">返回</a>
<br/>
<br/><br/>
<br/>
<%= javascript_include_tag "jquery", "jquery_ujs" %>
<script type="application/javascript">

    $("#serach").bind("click",function(){
        var departure=    $("#departure").val();
        var arrival=    $("#arrival").val();


          var url = $(this).data('url');
            $.ajax(url,{
                type: "post",
                data:{ departure:departure ,arrival:arrival},
                success:function(res){

                }
            })

        $(".button-am").bind("click",function() {
                  if($("#mancoweight").css('display','none')) {
                      $("#mancoweight").css('display','block') ,
                              $(".button-hide").css('display','block') ,
                              $(".kgi").css('display','block')


                  }  else{
                      $("#mancoweight").addClass('display','none')  ,
                      $(".button-hide").css('display','none'),
                              $(".kgi").css('display','none')
                      }


        }   )
        })


</script>


