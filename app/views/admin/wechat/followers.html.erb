<div>
  <h4>所有关注者</h4>
</div>
<%= link_to '刷新专注者列表','/admin/wechat/followers_import', :class => "pull-right btn btn-primary" %>

<table class="table table-bordered table-hover">
  <tr>
    <th>openid</th>
    <th>全部佣金</th>
    <th>已领佣金</th>
    <th>待领佣金</th>
