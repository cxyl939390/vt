<div>
  <h4>所有关注者</h4>
</div>
<%= link_to '刷新专注者列表','/admin/wechat/followers_import', :class => "pull-right btn btn-primary" %>

<table class="table table-bordered table-hover">
  <tr>
    <th>openid</th>
    <th>全部佣金</th>
    <th>已领佣金</th>
    <th>待领佣金</th>
    <th>头像</th>
    <th>昵称</th>
    <th>性别</th>
    <th>地区</th>
    <th>关注时间</th>
    <th>操作</th>
  </tr>

  <% @followers.each do |follower| %>
      <tr>
        <td><%=follower.openid%></td>
        <td><%=follower.commission%></td>
        <td>0</td>
        <td><%=follower.commission%></td>
 <%if follower.user_info%>
     <%@person =eval(follower.user_info)%>
        <td><%=image_tag @person["headimgurl"], :size => "108x108"%></td>

        <td><%=@person["nickname"]%></td>
        <td><%=@person["sex"]%></td>
        <td><%="#{@person["country"]}/#{@person["province"]}/#{@person["city"]}"%></td>
        <td><%=Time.at(@person["subscribe_time"])%></td>
 <%end%>

        <td>
          <%#= link_to '编辑', edit_admin_supplier_path（follower) %>
          |
          <%#= link_to '删除', admin_supplier_path(follower), method: :delete, data: { confirm: '确定删除?' } %>
        </td>
      </tr>
  <% end %>
</table>

<div class="pagination">
  <%= will_paginate @followers, :container => false %>
</div>
