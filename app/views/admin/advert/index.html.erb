<h4>
  所有广告
  <%=link_to "新增广告",new_admin_advert_path,:class=>"btn btn-primary pull-right"%>
</h4>
<br>  <%if @adverts%>
<table class="table table-striped table-bordered">
  <tr>
    <th>名称</th>
    <th>访问地址</th>
    <th>存放产品位置</th>

    <th>更新时间</th>
    <th>操作</th>
  </tr>

  <%@adverts.each do |advert|%>
      <tr>
        <td><%=advert.title%></td>
        <td><%=link_to advert.advert_slug, "http://#{advert.advert_slug}",:target=>"_blank"%></td>

        <td><%=Ecstore::GoodCat.find_by_cat_id(advert.cat_id).cat_name%></td>

        <td><%=advert.updated_at.strftime("%Y-%m-%d %H:%M:%S")%></td>
        <td>

          <%=link_to "编辑",edit_admin_advert_path(advert)%>
          <%=link_to "删除",admin_advert_path(advert), method: :delete, confirm: "确定要删除吗?"%>
        </td>
      </tr>
  <%end%>

</table>
<div class="pagination">
  <%=will_paginate @adverts, container: false%>
</div>
<%else%>
    <span>您目前没有任何广告您可以<%=link_to "新增广告",new_admin_advert_path,:class=>"btn btn-primary "%></span>
<%end%>