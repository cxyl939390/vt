<%=render "form"%>
<table class="table table-bordered">
	<thead>
		<tr>
			<th>shop_id</th>
			<th>店名</th>
			<th>店长</th>
			<th>手机</th>
			<th>邮件</th>
			<th>销售地区</th>
			<th>创建时间</th>
			<th>状态</th>
          <th>分店管理</th>
          <th>操作</th>
		</tr>
	</thead>
	<tbody>
		<%@shops.each do |shop|%>
		<tr>
			<td><%=shop.shop_id%></td>
			<td><%=link_to shop.shop_name,"/shop/?shop_id=#{shop.shop_id}",:target=>"_blank"%></td>
			<td><%=shop.name%></td>
			<td><%=shop.shop_tel%></td>
			<td><%=shop.shop_email%></td>
			<td><%=shop.area%></td>
			<td><%=shop.created_at%></td>
          <%if shop.status==1%>
              <td style="color: red">审核通过</td>
              <%else%>
              <td>待审核</td>
              <%end%>
          <% if shop.permission_branch=="-2"%>
              <td >目前没有资格</td>
              <% elsif shop.permission_branch=="-1"%>
                  <td>店主没有提交申请</td>
          <% elsif shop.permission_branch=="0"%>
            <td style="color: red">分店申请中!!</td>
              <%elsif shop.permission_branch=="1"%>

              <td style="color: #070bd6" >(<%=Ecstore::Shop.where(:parent=>shop.shop_id).count%>)个分店
                 </td>
              <%end%>
			<td>
				<%=link_to "编辑",edit_admin_shop_path(shop)%>
				<%=link_to "删除",admin_shop_path(shop),:method=>:delete,:confirm=>"确定删除吗？"%>
			</td>
		</tr>
		<%end%>
	</tbody>
</table>