<h4>
  所有资料
  <%=link_to "新增资料",new_admin_file_path,:class=>"btn btn-primary pull-right"%>
</h4>
<%if @files%>
    <table class="table table-striped table-bordered">
      <tr>
        <th>名称</th>
        <th>文件</th>
        <th>描述</th>

        <th>更新时间</th>
        <th>操作</th>
      </tr>

      <%@files.each do |file|%>
          <tr>
            <td><%=file.name%></td>
            <td><%=link_to file.url, "#{file.url}"%></td>

            <td><%=file.desc%></td>

            <td><%=file.updated_at.strftime("%Y-%m-%d %H:%M:%S")%></td>
            <td>

              <%=link_to "编辑",edit_admin_file_path(file)%>
              <%=link_to "删除",admin_file_path(file), method: :delete, confirm: "确定要删除吗?"%>
            </td>
          </tr>
      <%end%>

    </table>
    <div class="pagination">
      <%=will_paginate @files, container: false%>
    </div>
<%else%>
    <span>您目前没有任何广告您可以<%=link_to "新增广告",new_admin_advert_path,:class=>"btn btn-primary "%></span>
<%end%>