<div style="padding: 15px">

  <div class="am-g">

   <div class="am-u-md-6">
     <div class="am-panel am-panel-default">
     <div class="am-panel-hd">当前活动是: <%=@event.name%></div>
     <div class="am-panel-bd">目前已经有<span style="color: #ff0000">(<%=@applicants.size%>)</span>人报名了哦!!!<br>
        <span>活动地点:  <%=@event.adds%></span> <br>
       <span>活动时间:  <%=@event.times.strftime("%Y-%m-%d %H:%M:%S")%></span> <br>
  <span>活动内容:</span> <%=raw @event.body.gsub(/width/,'widthh').gsub(/height/,'heightt/') if @event.body%>
     </div></div></div>


  <div class="applicant-form" id="form">
  <div>
 <span style="border: 4px solid #FF8000"></span> <span style="margin-left: 10px">活动报名</span>
  </div>
<%=form_for :applicant,:url=>@action_url,:html => {:class=>"am-form"},:remote=>true do |f|%>
    <%=f.hidden_field :event_id,:value=>@event.id%>
        <%=f.hidden_field :member_id,:value=>@user.member_id%>
    <div id="msg"></div>

        <div class="am-input-group">
         <span class="am-input-group-label"> <span style="color: red">*</span><i class="am-icon-user"></i></span>
          <%=f.text_field :name,:class=>"input" ,:placeholder=>"请输入您的姓名",:value=>@user.name%>
        </div>
        <br>
        <div class="am-input-group">
          <span class="am-input-group-label"><i class="am-icon-calendar"></i></span>
          <%=f.text_field :age,:class=>"input" ,:placeholder=>"请输入您的年龄"%>
        </div>
        <br>
        <div class="am-input-group">
          <span class="am-input-group-label"> <i class="am-icon-user"></i></span>
          <%=f.select :sex,{'女'=>"female",'男'=>"male"}%>
        </div>
        <br>
        <div class="am-input-group">
          <span class="am-input-group-label"><span style="color: red">*</span> <i class="am-icon-mobile"></i></span>
          <%=f.text_field :mobile,:class=>"input", :placeholder=>"请输入您的手机号",:value=>@user.mobile%>
        </div>
        <br>
        <div class="am-input-group">
          <span class="am-input-group-label"><span style="color: red">*</span> <i class="am-icon-envelope"></i></span>
          <%=f.text_field :email,:class=>"input", :placeholder=>"请输入您的邮箱",:value=>@user.email%>
        </div>
        <br>
        <div class="am-input-group">
          <span class="am-input-group-label"><span style="color: red">*</span> <i class="am-icon-weixin"></i></span>
          <%=f.text_field :wechat_num,:class=>"input", :placeholder=>"请输入您的微信号",:value=>@user.wechat_num%>
        </div>
        <br>
        <div class="am-input-group">
            <span>自我介绍</span>
          <%=text_field_tag :user_desc ,@user.user_desc,:class=>"input" ,:placeholder=>"请输入下您的自我介绍如:公司职位,性格等!!" ,:style=>"height:60px;width:100%"%>
        </div>
        <br>




        <input type="submit" value="提交报名" class="am-btn am-btn-block am-btn-warning">
      </fieldset>

<%end%>
    </div> </div>      </div>