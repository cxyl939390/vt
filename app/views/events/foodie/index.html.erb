<div style="padding: 15px">
<div id="amz-home">
  <section id="amz-hero" style="text-align: center">
    <div class="amz-container am-cf">
      <div class="amz-mascot am-scrollspy-init am-scrollspy-inview am-animation-slide-left" data-am-scrollspy="{animation: 'slide-left', delay: 100}">
        <img style="width:40%;" src="/assets/foodie.jpg" alt="foodie_log" />
      </div>
      <div class="amz-hero-intro">
        <div class="amz-hero-headings">
          <h1 class="clearstyle" data-am-scrollspy="{animation:'slide-left'}" class="am-scrollspy-init am-scrollspy-inview am-animation-slide-left">欢迎来到贸威吃货平台</h1>
          <h2 class="clearstyle" data-am-scrollspy="{animation:'slide-right', delay: 500}" class="am-scrollspy-init am-scrollspy-inview am-animation-slide-right">xxxxx</h2>
        </div>
          </div>
        </div>
      </section>
    </div>
  <div data-am-widget="list_news" class="am-list-news am-list-news-default am-no-layout">
    <!--列表标题-->
    <div class="am-list-news-hd am-cf">
      <!--带更多链接-->
      <a href="/events/party/list?supplier_id=78">
       <h2 style="border: 4px solid #FF8000"></h2> <h2 style="margin-left: 10px">热门活动</h2> <span class="am-list-news-more am-fr">更多 &raquo;</span>
      </a>
    </div>
    <div class="am-list-news-bd">
      <ul class="am-list">
        <%if @events.size>0%>
        <% @events.each do |event| %>
            <li class="am-g am-list-item-desced am-list-item-thumbed am-list-item-thumb-bottom-left">
              <a href="/events/foodie/new?id=<%=event.id%>&supplier_id=78">
                <div class="am-u-sm-2 am-list-thumb">
                  <% if Ecstore::User.find_by_member_id(event.member_id).weixin_headimgurl %>
       <%=image_tag Ecstore::User.find_by_member_id(event.member_id).weixin_headimgurl,:id=>"weixin" ,:class => "am-circle",:style=>"width: 45px; height: 45px;",:onerror=>"javascript:this.src='/assets/event.png';"%>
                 <%else%>
                  <img src="/assets/event.png" style="width: 45px; height: 45px;"> <%end%>
                </div>
                <div class="am-u-sm-10 am-list-main">
                  <h4 class="clearstyle"> <%=event.name%>  <span style=";margin-left:23px;font-size: 13px"><%=event.name%></span> </h4>
                  <span style="font-size: 13px"><%=event.times%> </span>
                  <span class="icon-arr"></span>
                </div></a></li>

        <%end%>

        <%else%>
            <li class="am-g am-list-item-desced am-list-item-thumbed am-list-item-thumb-bottom-left">
              <a href="javascript:void (0)">
                <div class="am-u-sm-2 am-list-thumb">
                  <img style="width: 45px; height: 45px;" src="/assets/error.png" alt="">
                </div>
                <div class="am-u-sm-10 am-list-main">

                  <span style="font-size: 13px">当前没有活动 ,具体发布请留意贸威服务号哦!!!! </span>
                  <span class="icon-arr"></span>
                </div></a></li>
           <%end%>
      </ul>




             </div>
