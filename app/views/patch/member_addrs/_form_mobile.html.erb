<%=form_for :addr, :url=>@method == :put ? @action_url : member_addrs_path, :remote=>true,:method=>@method||:post,:html=>{ :class=> " form-horizontal" } do |f|%>
    <input type="hidden" name="return_url" value="/orders/new_mobile">
<dl class="connerbox">
  <dd><span class="form_hd">*姓名：</span>
    <span class="form_td"><%=f.text_field :name, :maxlength=>"50", :class=>"text_input"%></span></dd>
  <dd><span class="form_hd">*手机：</span>
    <span class="form_td"> <%=f.text_field :mobile,:class=>"span2",:maxlength=>11,:class=>"text_input"%></span></dd>
  <dd><span class="form_hd">电话：</span>
    <span class="form_td"> <%=f.text_field :tel,:maxlength=>"20",:class=>"text_input"%></span></dd>
  <dd><span class="form_hd">*省份：</span>
         <span class="form_td">
            <%=f.select :province,Ecstore::Region.provinces.collect{|p| [p.local_name,p.region_id] } ,{:include_blank=>"请选择省" },{ :onchange=>"selectProvince(this,'#city','#district');",:id=>"province" ,:class=>"text_select"}%>
        </span>
    <span class="i_up_arrow"></span></dd>
  <dd><span class="form_hd">*城市：</span>
         <span class="form_td">
            <%if @addr&&@addr.city%>
                <%=f.select :city,Ecstore::Region.cities_of(@addr.province).collect{|p| [p.local_name,p.region_id] },{:include_blank=>"请选择市"},{ :onchange=>"selectCity(this,'#district');",:id=>"city" ,:class=>"text_select" }%>
            <%else%>
                <%=f.select :city, {}, { :include_blank=>"请选择市" }, { :onchange=>"selectCity(this,'#district');",:id=>"city",:class=>"text_select" }%>
            <%end%>
        </span>
    <span class="i_up_arrow"></span></dd>
  <dd><span class="form_hd">区县：</span>
         <span class="form_td">
            <%unless @addr&&@addr.new_record?%>
                <%=f.select :district,Ecstore::Region.districts_of(@addr&&@addr.city).collect{|p| [p.local_name,p.region_id] },{:include_blank=>"请选择区/县" },{ :onchange=>"selectDistrict(this);",:id=>"district" ,:class=>"text_select",:style=>"#{'display:none;' if @addr.district.blank? }" } %>
            <%else%>
                <%=f.select :district, {}, { :include_blank=>"请选择区/县" }, { :onchange=>"selectDistrict(this);",:id=>"district" }%>
            <%end%>
        </span>
    <span class="i_up_arrow"></span></dd>

  <dd><span class="form_hd">邮编：</span><span class="form_td"><%=f.text_field :zip,:class=>"text_input",:maxlength=>"6"%></span></dd>
</dl>
<dl class="connerbox" style="display:none">
  <dd><span class="form_hd">收货时间：</span>
        <span class="form_td ml80">
        <select id="transport_day" name="transport_day" class="text_select" oncha="">
          <option value="0">请选择</option>
          <option value="1">送货时间不限</option>
          <option value="2">只双休日/节假日送货(工作日不用送)</option>
          <option value="3">只工作日(双休日/节假日不用送)</option>
        </select>
      </span><span class="i_up_arrow"></span></dd>
</dl>
<dl class="connerbox"><dd><span>详情地址：</span><%=f.text_area :addr,:class=>"span5", :id=>"addr",:class=>"textarea_input textarea_address"%>
  <span class="help-inline error"></span>
</dd></dl>
    <dl class="connerbox" style="display:none"><dd><span> <%=f.label :def_addr, "设置为默认地址：",:class=>"text_input"%></span>
      <span class="form_td"> <%#=f.check_box :def_addr, {}, 1, 0 %><input name="addr[def_addr]" type="hidden" value="1" checked="true" /></span>
    </dd></dl>
<div class="ui-btn-area">
  <%if @method == :put%>
      <%=f.submit "修 改",:class=>"btn_red" %>
  <%else%>
      <%=f.submit "确认收货地址",:class=>"btn_red" %>
  <%end%>
</div>
<%end%>
</div>

