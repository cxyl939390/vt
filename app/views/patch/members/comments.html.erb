<div style="margin: 10px;padding: 10px">
<div class="row">
  <div class="title">
      <span style="border: 3px solid #a12b0f"> </span>
    <span style="margin-left: 10px;font-size: 20px;font-weight: bold">商品评价/晒单</span>
    </div>
<table style="width: 100%;line-height: 18px;
        text-align: center;
        border: 1px solid #f2f2f2;
        border-top: 0;
        color: #333;
        width: 100%;">
        <thead>
        <tr>
            <td >商品信息</td>
          <td>购买时间</td>
          <td>评价状态</td>
         </thead>

      </table>







  <dl class="accordion dl"style="width: 100%;" data-accordion>
       <% @order.order_items.each do |order_item|%>

  <dd class="accordion-navigation " >
    <a href="#pp<%=Ecstore::Good.find(Ecstore::Product.find_by_bn(order_item.bn).goods_id).goods_id%>" class="row">
      <div class="large-4 medium-4 small-4 columns">
        <%=  Ecstore::Good.find(Ecstore::Product.find_by_bn(order_item.bn).goods_id).name
        %> </div>
      <div class="large-4 medium-4 small-4  columns">
      <%@order.order_logs.order("alttime asc").each do |log|%>
          <%=log.created_at%>
      <%end%></div>
      <div class="large-4 medium-4 small-4 columns">在线评论</div>

    </a>
    <div id="pp<%=Ecstore::Good.find(Ecstore::Product.find_by_bn(order_item.bn).goods_id).goods_id%>" class="content ">

      <div class="row comment-box">
        <div class="box-t"></div>
        <%if Ecstore::Comment.where(:order_id=>order_item.order_id,:commentable_id=>Ecstore::Good.find(Ecstore::Product.find_by_bn(order_item.bn).goods_id).goods_id).first%>
            <%@comment_text=Ecstore::Comment.where(:order_id=>order_item.order_id,:commentable_id=>Ecstore::Good.find(Ecstore::Product.find_by_bn(order_item.bn).goods_id).goods_id).first%>

