          <div class="row">
            <div class="small-8 columns">
              <div class="row">
                <div class="small-3 columns">
                  <label for="right-label" class="right inline">心得</label>
                </div>
                <div class="small-9 columns">
                  <%=f.text_area :content, :style=>"height:150px;", :placeholder=>"我们的产品是否给力，快快分享您的心得"%>

                </div>
              </div>
            </div>
          </div>

