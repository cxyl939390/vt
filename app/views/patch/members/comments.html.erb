              <div class="small-2 columns">
                <label for="right-label" class="right inline">满意度</label>
              </div>

              <div class="small-10 columns">
                <ul>
                  <input type="hidden" class="degree" value="<%=@comment_text.degree%>">
                  <li><a href="javascript:;">1</a></li>
                  <li><a href="javascript:;">2</a></li>
                  <li><a href="javascript:;">3</a></li>
                  <li><a href="javascript:;">4</a></li>
                  <li><a href="javascript:;">5</a></li>
                </ul>
              </div>

            </div>

            <div class="row">
              <div class="small-8 columns">
                <div class="row">
                  <div class="small-3 columns">
                    <label for="right-label" class="right inline">标题</label>
                  </div>
                  <div class="small-9 columns">
                    <%=@comment_text.title%>
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="small-8 columns">
                <div class="row">
                  <div class="small-3 columns">
                    <label for="right-label" class="right inline">心得</label>
                  </div>
                  <div class="small-9 columns">
                    <%=@comment_text.content%>

                  </div>
                </div>
              </div>
            </div>



      <%else%>
        <%=form_for :comment,:url=>"/member/add_comment" ,:remote=>true do |f|%>
            <%=f.hidden_field :commentable_id,:value=>Ecstore::Good.find(Ecstore::Product.find_by_bn(order_item.bn).goods_id).goods_id%>
            <%=f.hidden_field :member_id,:value=>@user.member_id if @user%>
            <%=f.hidden_field :order_id,:value=>@order.order_id%>
                <%=hidden_field_tag :return_url,request.url.sub('http://trade','').force_encoding('UTF-8')%>



                    <div class="row star" >
                      <div class="small-2 columns">
                        <label for="right-label" class="right inline">满意度</label>
                      </div>
                      <div class="small-10 columns">
                        <ul>
                          <%=f.hidden_field :degree%>
                          <li><a href="javascript:;">1</a></li>
                          <li><a href="javascript:;">2</a></li>
                          <li><a href="javascript:;">3</a></li>
                          <li><a href="javascript:;">4</a></li>
                          <li><a href="javascript:;">5</a></li>
                        </ul>
                      </div>

                    </div>





                <div class="row">
            <div class="small-8 columns">
              <div class="row">
                <div class="small-3 columns">
                  <label for="right-label" class="right inline">标题</label>
                </div>
                <div class="small-9 columns">

                  <%=f.text_field :title , :placeholder=>"请描述下主题"%>

                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="small-8 columns">
              <div class="row">
                <div class="small-3 columns">
                  <label for="right-label" class="right inline">心得</label>
                </div>
                <div class="small-9 columns">
                  <%=f.text_area :content, :style=>"height:150px;", :placeholder=>"我们的产品是否给力，快快分享您的心得"%>

                </div>
              </div>
            </div>
          </div>

          <div class="row">
            <%=f.submit "提交",:class=>"button  #{'login' unless signed_in?}"%></div>
        <%end%>
        <%end%>
        </div>
     </div>
    <hr>
  </dd>
  <%end%>
</dl>
</div>       </div>
