                <!--</div>-->
              <!--</div>-->
            <!--</div>-->
            <div class="row">
              <div class="small-8 columns">
                <div class="row">
                  <div class="small-3 columns">
                    <label for="right-label" class="right inline">心得</label>
                  </div>
                  <div class="small-9 columns">
                    <%=@comment_text.content%>

                  </div>
                </div>
              </div>
            </div>



      <%else%>
        <%=form_for :comment,:url=>"/member/add_comment" ,:remote=>true do |f|%>
            <%=f.hidden_field :commentable_id,:value=>Ecstore::Good.find(Ecstore::Product.find_by_bn(order_item.bn).goods_id).goods_id%>
            <%=f.hidden_field :member_id,:value=>@user.member_id if @user%>
            <%=f.hidden_field :order_id,:value=>@order.order_id%>
                <%=hidden_field_tag :return_url,request.url.sub('http://trade','').force_encoding('UTF-8')%>




